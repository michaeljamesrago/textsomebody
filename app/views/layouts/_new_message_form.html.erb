<div class="form-group msg-form">
  <%= form_with(  model: [@conversation, @message], 
                  remote: true,
                  data: {
                    controller: "reset-form",
                    action: "turbo:submit-end->reset-form#reset"
                  } ) do |f| %>
    <%= f.text_field :body, class: "form-control", autocomplete: "off" %>
    <%= f.submit data: { disable_with: false }, class: "btn btn-primary" %>
  <% end %>
</div>